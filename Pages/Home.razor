@page "/home"
@inject RandomizationService RandomizationService

<PageTitle>Home</PageTitle>

@code {
    private List<string> etsittavat = new List<string> { "Kirja", "Talismaani", "Kirstalli" };
}

<div class="main-container">
    <div class="left-container">
        <h2>Hahmot</h2>
        @foreach (var character in RandomizationService.RandomCharacters)
        {
                <div>
                    <input type="radio" id="@character" name="characters" value="@character" class="hidden-radio" onchange="checkSelection()">
                    <label for="@character" class="selectable-item">@character</label>
                </div>
        }
    </div>

    <div class="right-container">
        <h2>Mitä lähdet etsimään?</h2>
        @foreach (var item in etsittavat)
        {
                <div>
                    <input type="radio" id="@item" name="weapons" value="@item" class="hidden-radio" onchange="checkSelection()">
                    <label for="@item" class="selectable-item">@item</label>
                </div>
        }
    </div>
</div>

<div class="button-container">
    <img 
        id="continue-button" 
        class="continue-button" 
        src="6188818.png" 
        alt="Continue" 
        style="display: none;" 
        onclick="handleContinueClick()"
    />
</div>

<style>
    :root {
        --side-margin: 300px;
    }

    .main-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-image: url("/Pictures/Starting_page_background.jpg"); /* Päivitetty polku taustakuvalle */
        background-size: cover;
        background-position: center;
    }

    .left-container, .right-container {
        width: 45%;
        margin-left: var(--side-margin);
        margin-right: var(--side-margin);
    }

    .hidden-radio {
        display: none;
    }

    .selectable-item {
        display: inline-block;
        padding: 5px;
        cursor: pointer;
    }

    .hidden-radio:checked + .selectable-item {
        border: 2px solid gray;
        border-radius: 5px;
    }

    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh; /* Adjusted height to move the button up */
    }

    .continue-button {
        width: 100px; /* Adjust the size of the image */
        height: auto;
        cursor: pointer;
        margin-top: -200vh; /* Adjusted margin to move the button up */
    }
</style>

<script>

    function checkSelection() {
        const characterSelected = document.querySelector('input[name="characters"]:checked');
        const weaponSelected = document.querySelector('input[name="weapons"]:checked');
        const continueButton = document.getElementById('continue-button');

        if (characterSelected && weaponSelected) {
            continueButton.style.display = 'block';
        } else {
            continueButton.style.display = 'none';
        }
    }

    function handleContinueClick() {
        // Add your continue button click handling logic here
        alert('Continue button clicked!');
    }
</script>