@page "/"

@using System.IO
@using Microsoft.AspNetCore.Components

<PageTitle>Home</PageTitle>

<h1>@message</h1>

<div class="main-container">
    <div class="left-container">
        <button>Char 1</button>
        <button>Char 2</button>
        <button @onclick="ChangeMessage">Char 3</button>
    </div>

    <div class="right-container">
        <button @onclick="ReadFile">Read File</button>
        <ul>
            @foreach (var character in characters)
            {
                <li>@character</li>
            }
        </ul>
    </div>
</div>

<style>
    .main-container {
        display: flex;
        justify-content: space-between;
        padding: 20px;
        height: 100vh;
    }

    .left-container {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
    }

    .right-container {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
    }

    .left-container button,
    .right-container button {
        margin: 10px 0;
    }
</style>

@code {
    private string message = "Hello, world!";
    private List<string> characters = new List<string>();

    private void ChangeMessage()
    {
        message = "Hello, Char 3 clicked!";
    }

    private void ReadFile()
    {
        var filePath = "Aseet.txt"; // Update with the actual file path
        if (File.Exists(filePath))
        {
            characters = File.ReadAllLines(filePath).ToList();
        }
        else
        {
            characters = new List<string> { "File not found." };
        }
    }
}