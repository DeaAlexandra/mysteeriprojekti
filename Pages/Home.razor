@page "/"
<PageTitle>Home</PageTitle>

<h1>@message</h1>

<div class="main-container">
    <div class="left-container">
        <button @onclick="ChangeMessage">Get Random Weapons</button>
    </div>

    <div class="right-container">
        @foreach (var weapon in randomWeapons)
        {
            <p>@weapon</p>
        }
    </div>
</div>

<style>
    .main-container {
        display: flex;
        justify-content: space-between;
        padding: 20px;
        height: 100vh;
    }

    .left-container {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
    }

    .right-container {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
    }

    .left-container button,
    .right-container button {
        margin: 10px 0;
    }
</style>

@code {
    private string message = "Hello, world!";
    private List<string> weapons = new List<string> { "Hohtava kukka", "Taikasauva", "Miekka", "Kaulin", "Puunuija", "Iso vasara" };
    private List<string> randomWeapons = new List<string>();

    private void ChangeMessage()
    {
        message = "Random weapons selected!";
        GetRandomWeapons();
    }

    private void GetRandomWeapons()
    {
        Random random = new Random();
        randomWeapons = weapons.OrderBy(x => random.Next()).Take(3).ToList();
    }
}