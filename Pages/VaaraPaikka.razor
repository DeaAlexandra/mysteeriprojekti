@page "/VaaraPaikka"

<PageTitle>Väärä paikka</PageTitle>

<div class="main-container">
    <div class="text-container">
        <h2>Hups</h2>
        <p>Menit väärään paikkaan.</p>
        <p>Paina nappia palataksesi takaisin.</p>
    </div>
    <div class="button-container">
        <img id="continue-button" class="continue-button" src="6188818.png" alt="Continue" style="display: none;"
            GoBack="handleContinueClick()" />
    </div>
</div>

<style>
    .main-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-image: url("/Pictures/Wrong_place_landscape.jpg");
        /* Määritä taustakuva tähän */
        background-size: cover;
        /* Tämä varmistaa, että kuva kattaa koko taustan */
        background-position: center;
        /* Asettaa kuvan keskelle */
    }

    .text-container {
        width: 50%;
        text-align: center;
        margin-bottom: 20px;
        /* Add some space between text and buttons */
    }

    .button-container {
        width: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .continue-button {
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        background: none;
        cursor: pointer;
    }

    .continue-button:hover {
        /* Add hover styles here */
    }
</style>

@code {
    private void GoBack()
    {
        NavigationManager.NavigateTo("/paikka1");
    }
    [Inject]
    private NavigationManager NavigationManager { get; set; }
}